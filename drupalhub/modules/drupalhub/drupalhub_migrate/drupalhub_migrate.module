<?php
/**
 * @file
 * Main module for for DrupalHub migrate.
 */

/**
 * Implements hook_migrate_api().
 */
function drupalhub_migrate_migrate_api() {

  $classes = array(
    'User',
    'Blog',
    'Group',
    'Project',
    'Playlist',
    'Youtube',
    'Comment',
    'Category',
    'Question',
    'GroupBanner',
    'Recommendation',
    'WikiCategory',
  );

  $api = array(
    'api' => 2,
    'migrations' => array(),
  );

  foreach ($classes as $class) {
    $api['migrations'][$class] = array(
      'class_name' => $class,
      'group_name' => 'default',
    );
  }

  return $api;
}
